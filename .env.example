
# URL completa de conexão com o Postgres (Neon)
# Inclua sslmode=require e channel_binding=require
DATABASE_URL="postgresql://<USER>:<PASSWORD>@<HOST>/<DBNAME>?sslmode=require&channel_binding=require"

# ID do projeto Firebase (mesmo usado no front)
FIREBASE_PROJECT_ID=mytrip-auth

# Email da conta de serviço (vem do JSON da chave privada)
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxx@mytrip-auth.iam.gserviceaccount.com

# Chave privada da conta de serviço
# ⚠️ Importante: mantenha as quebras de linha como \n e NÃO coloque quebras reais.
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nINSIRA_SUA_CHAVE_PRIVADA_AQUI\n-----END PRIVATE KEY-----\n"


# Segredo usado para assinar/validar tokens JWT internos
# Gere um novo com: python -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET=coloque_um_segredo_forte_aqui

# Tempo de expiração dos JWTs internos (em minutos)
JWT_EXPIRES_MIN=60

